#include <iostream>
#include <conio.h>
#include <string>

using namespace std;

Liczznaki(string zdanie){

cout<<"Ilosc wszystkich znakow w zdaniu to: "<<(zdanie.size());

}

int Liczbezspacji(const string zdanie, const char znak=' ')
        {
                int iIloscZnakow = 0;

                for(int i = 0; i < zdanie.length(); ++i)
                        {
                                if(zdanie[i] != znak)
                                        {
                                                ++iIloscZnakow;
                                        }
                        }
                cout<<iIloscZnakow;
        }

int Liczbezpodanego(const string zdanie)
        {char znak;
         cout<<"Podaj znak do pominiecia: ";
         cin>>znak;
                int iIloscZnakow = 0;

                for(int i = 0; i < zdanie.length(); ++i)
                        {
                                if(zdanie[i] != znak)
                                        {
                                                ++iIloscZnakow;
                                        }
                        }
                cout<<iIloscZnakow;
        }

int main()
{string zdanie;
char znak;
int wybor,powtorka;
  do{
    cout<<endl;
    cout << "Podaj swoje zdanie: ";
    getline(cin, zdanie);
    cout<<endl;
    cout<< "!----------------------------------!"<<endl;
    cout<< "!MENU:                             !"<<endl;
    cout<< "!----------------------------------!"<<endl;
