#include <iostream>
#include <cstdlib>

using namespace std;

 struct osoba{
int id;
char imie[20];
char nazwisko[20];
int wiek;
};

void wypelnianie(int n,osoba *tab){
    int i;
    for (i=0; i<n; i++)
    {
        do
        {
         cout<< "Podaj id tosoba numer "<< i+1 << endl;
         cin >> tab->id;
         cin.clear(); //kasowanie flagi błędu strumienia
         cin.sync(); //kasowanie zbędnych znaków z bufora
        } while(!(cin>>tab->id));

     cout<< "Podaj imie tosoba numer " << i+1 << endl;
     cin >> tab->imie;
     cout<< "Podaj nazwisko tosoba numer " << i+1 << endl;
     cin>>tab->nazwisko;

     do
     {
      cout<< "Podaj wiek tosoba numer " << i+1 << endl;
      cin>> tab->wiek;
      cin.clear(); //kasowanie flagi błędu strumienia
      cin.sync();
     }while(!(cin>>tab->wiek));
*tab++;
    }
}

void odczyt (int n,osoba *tab ){
  int i;
    for (i=0; i<n; i++)
        {
         cout<<"Id: " << tab->id;
         cout<<endl;
         cout<<"Imie: " << tab->imie;
         cout<<endl;
         cout<<"Nazwisko: " << tab->nazwisko;
         cout<<endl;
         cout<<"Wiek: " << tab->wiek << endl;
*tab++;
        }
}





int main(){
    int n;
    cout << "Wprowadz N: "<<endl;
    cin >> n;

    osoba *tab = new osoba [n]  ;
    wypelnianie(n,tab);
    odczyt (n,tab);


    delete tab;

    return 0;
}

