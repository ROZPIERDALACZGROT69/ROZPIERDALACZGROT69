#include <iostream>

using namespace std;

void wyswietl ( int tab [10][10],int n){
for(int i=0;i<n;i++) {
    for(int j=0;j<n;j++) {
        cout.width( 3 ); cout<< tab[i][j];
    } cout <<endl;
  } cout << endl;
return;}

        void sumakiw(int tab[10][10],int n){    //     SUMA WIERSZY I KOLUMN
 int l,m,suma1=0,suma2=0;
 cout<<"Podaj kolumne do sumowania:  ostatnia kolomna to "<<n<<endl;  cin>>l; while (l<1 || l>n) { cout << "Wprowadz ponownie "<<endl; cin >>l;}
 for (int i=0; i<n; i++){
    suma1=suma1+tab[i][l-1];
 }
 cout<<"Suma wynosi: "<<suma1<<endl;
 wyswietl(tab,n);
 cout<<"Podaj wiersz do sumowania: ostatni wiersz to "<<n<<endl;  cin>>m;  while (m<1 || m>n){cout << "Wprowadz ponownie "<<endl; cin >>m;}
    for (int j=0; j<n; j++){
    suma2=suma2+tab[m-1][j];
    }
 cout<<"Suma wierszu wynosi: "<<suma2<<endl;
 wyswietl(tab,n);
return;}

        void sumapod(int tab[10][10], int n){      // SUMA PRZEKATNYCH
    cout <<"    Suma Przekatnych    "<< endl;
 int suma=0,suma2=0,k=n;
 for(int i=0;i<n;i++) {
    for(int j=0;j<n;j++) {
    if(j==k-1){  k--; suma=suma+tab[i][j]; }
    }  }
 cout<<" Suma ponizej przekatnej: "<<suma <<endl;
 wyswietl(tab,n); cout << endl;
 k=0;
  for(int i=0;i<n;i++) {
    for(int j=0;j<n;j++) {
    if(j==k){ suma2=suma2+tab[j][i]; }
    } k++;  }
 cout<<" Suma powyzej przekatnej: "<<suma2 <<endl;
 wyswietl(tab,n); cout << endl;

return;}


int main()
{int tab[10][10],n,k=0,a=0;
 cout << "Podaj rozmiar boku macierzy NxN: "<<endl;
 cin>>n;

 for(int i=0;i<n;i++) {
    for(int j=0;j<n;j++) {  k=k+1;
        cout<<" Liczba nr: "<< k<<endl;
        cin>> tab[i][j];
    }
 }
 while (a!=3){ a=0;
 cout << " Obliczenie Sumy wierszy oraz kolumn - 1 " <<endl;
 cout << " Obliczenie Sumy przekatnych - 2 " <<endl;
  cout << " WYJSCIE - 3 " <<endl;
  cout << " Wprowadz 1-3" <<endl; cin >> a;  while (a<1 || a>3){cin >> a;}
switch (a){
case 1:sumakiw(tab,n); break;
case 2:sumapod(tab,n); break;
} }
return 0;}
